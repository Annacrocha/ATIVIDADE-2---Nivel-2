#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main() {
	setlocale (LC_ALL, "portuguese");
    double base, resultado;
    int expoente;
    
    printf("Digite a base: ");
    scanf("%lf", &base);
    printf("Digite o expoente: ");
    scanf("%d", &expoente);

    resultado = 1.0;

    for (int i = 0; i < expoente; i++) {
        resultado *= base;
    }

    printf("%.2lf elevado a %d Ã© %.2lf\n", base, expoente, resultado);

    return 0;
}
